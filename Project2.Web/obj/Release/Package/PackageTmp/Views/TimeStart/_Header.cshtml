@model Project2.Core.Models.Entities.Guest
@{ 
    Layout = null;
}
<div class="header">
    <nav class="navbar navbar-expand-sm navbar-light bg-light justify-content-end align-items-center">

        <div class="collapse navbar-collapse flex-grow-1 flex-lg-grow-0">
            <form class="form-inline my-2 my-lg-0">
                <div class="search-box">
                    <input class="form-control mr-sm-2 search" type="text" placeholder="Search">
                    <a class="btn" href="#">
                        <i class="fas fa-search fa-sm"></i>
                    </a>
                </div>
            </form>
            <ul class="navbar-nav mt-2 mt-lg-0 align-items-center">
                <li class="nav-item dropdown" id="user">
                    <a class="nav-link dropdown-toggle" href="#" id="profile" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <img src="~/Content/asset/public/Image/@Model.Path" alt="User avatar" width="30" style="border-radius: 50%">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right custom-dropdown" aria-labelledby="profile">
                        <a class="dropdown-item d-flex align-items-center mb-1 px-3" href="@Url.Action("editProfile", "Guest", new { id = Model.Id })">
                            <span class="mr-2"><i class="fas fa-user "></i></span>
                            <div class="content">Profile</div>
                        </a>
                        <a class="dropdown-item d-flex align-items-center mb-1 px-3 dropdown-hover" href="#">
                            <span class="mr-2"><i class="fas fa-chart-bar "></i></span>
                            <div class="content">Tools</div>
                        </a>
                        <a class="dropdown-item d-flex align-items-center mb-1 px-3" href="#">
                            <span class="mr-2"><i class="fa fa-cog "></i></span>
                            <div class="content">Setting</div>
                        </a>
                        <a class="dropdown-item d-flex align-items-center mb-1 px-3" href="#">
                            <span class="mr-2"><i class="fas fa-question-circle "></i></span>
                            <div class="content">Help</div>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item d-flex align-items-center mb-1 px-3" href="@Url.Action("Logout", "Login")">
                            <span class="mr-2"><i class="fas fa-power-off"></i></span>
                            <div class="content">Log out</div>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</div>