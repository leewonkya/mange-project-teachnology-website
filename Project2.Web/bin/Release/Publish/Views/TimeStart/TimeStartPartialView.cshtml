@model List<Project2.Core.Models.Entities.Time_start>

    <thead>
        <tr>
            <th>#</th>
            <th>Tên đợt đồ án</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số lượng đề tài cho phép</th>
            <th>Số lượng đề tài đã tạo</th>
            <th>Trạng thái</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            int index = 0;
        }
        @if (Model.Count == 0)
        {
            <tr>
                <td style="color: red" colspan="7" align="center">Dữ liệu trống...</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            index++;
        <tr>
            <td>@index</td>
            <td>@item.name</td>
            <td>@item.start_at</td>
            <td>@item.end_at</td>
            <td>80</td>
            <td>@item.numberProject</td>
            <td>@(item.isFinish ? "Kết thúc" : "Chưa kết thúc")</td>
            <td>
                <a href="#" class="btn btn-danger btn-sm" onclick="remove(@item.id)"><i class="fas fa-trash-alt    "></i></a>
                <a href="#" class="btn btn-info btn-sm" onclick="block(@item.id)"><i class="fas fa-hourglass-end"></i></a>
            </td>
        </tr>
        }        
    </tbody>