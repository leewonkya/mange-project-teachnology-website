@{ 
    Layout = null;
}
@model Project2.Web.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="~/Content/asset/login/style.css" rel="stylesheet" />
    
</head>

<body>
    <section>
        <div class="form-input">
            <div class="title">Sign in</div>
            <div class="social-content">Login with email address</div>
            @using (Html.BeginForm("checkLog", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", @style = "padding-bottom: 0px; " })
            <div class="email-box">
                @Html.EditorFor(x => x.Username,new { htmlAttributes = new { @class = "form-control", type = "text", required ="required" } })
                @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
                <span>User name</span>
            </div>
            <div class="password-box">
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", type = "password", required = "required" } })
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                <span>Password</span>
            </div>
                <div class="submit-box">
                    <input type="submit" class="btn btn-submit" value="Sign in now">
                </div>

            }
            <div class="m-password">Missing password? <a href="#">find it</a></div>
        </div>
    </section>
    <script>
        $('.btn').on("click", function (e) {
            x = e.pageX - $(this).offset().left;
            y = e.pageY - $(this).offset().top;
        })
    </script>
</body>

</html>